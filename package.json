{
  "name": "captcha-bot",
  "version": "1.0.0",
  "description": "Bot defending chats in VK using text on images",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production nodemon ./dist/index.js",
    "dev": "NODE_ENV=development nodemon ./src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker": "NODE_ENV=production node ./dist/index.js",
    "build": "tsc --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xxhax-team/captcha-bot.git"
  },
  "author": "XXHAX Team <putin@xxhax.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/xxhax-team/captcha-bot/issues"
  },
  "homepage": "https://github.com/xxhax-team/captcha-bot#readme",
  "devDependencies": {
    "@types/node": "^13.7.7",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.1.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.6.2"
  },
  "dependencies": {
    "jimp": "^0.9.3",
    "nodemon": "^2.0.2",
    "runtypes": "^4.2.0",
    "typescript": "^3.8.3",
    "vk-io": "^4.0.0-rc.30",
    "yandex-speech-promise": "latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "src/**/*",
    "config/*",
    "@types/*",
    "nodemon.json",
    "tsconfig.json"
  ],
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false,
      "es6": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "prettier",
      "@typescript-eslint/eslint-plugin"
    ],
    "rules": {
      "semi": "off",
      "prettier/prettier": "warn",
      "no-console": "off",
      "@typescript-eslint/camelcase": "off",
      "no-restricted-syntax": "off",
      "no-await-in-loop": "off",
      "no-continue": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "require-await": "error",
      "radix": "error",
      "prefer-promise-reject-errors": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "useTabs": false
  }
}
